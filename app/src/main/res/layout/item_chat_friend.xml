<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="biz.ideus.ideuslibexample.ui.chat_screen.activity.ItemChatTag" />

        <variable
            name="viewModel"
            type="biz.ideus.ideuslibexample.data.model.response.response_model.Message" />

        <variable
            name="isShowDate"
            type="java.lang.Boolean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/font_size_10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_header_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_size_15"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/ll_date"
                android:visibility="@{(boolean)isShowDate ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.dateMessage}"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/light_gray" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_text_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/corners_layout_gray_10dp"
                android:layout_toEndOf="@+id/iv_user_photo"
                android:layout_toRightOf="@+id/iv_user_photo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@{viewModel.message}" />

                <LinearLayout
                    android:id="@+id/ll_image_attach_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:orientation="vertical">


                    <biz.ideus.ideuslibexample.ui.widgets.ViewImageLoader
                        android:id="@+id/iv_image_attach"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.message}" />
                </LinearLayout>



            </LinearLayout>

            <biz.ideus.ideuslib.widget.CircleImageView
                android:id="@+id/iv_user_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logo_temp_app" />

            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/ll_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_layout_gray_10dp"
                android:layout_alignLeft="@+id/ll_text_container"
                android:layout_alignStart="@+id/ll_text_container"
                android:layout_below="@+id/ll_text_container"
                android:orientation="vertical">
                </LinearLayout>

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_image_container"
                android:layout_alignStart="@+id/ll_image_container"
                android:layout_below="@+id/ll_image_container"
                android:layout_marginTop="5dp"
                android:text="@{viewModel.timeMessage}"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_10" />
        </RelativeLayout>

    </LinearLayout>
</layout>