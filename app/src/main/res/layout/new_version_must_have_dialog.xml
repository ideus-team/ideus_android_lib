<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <import type="biz.ideus.ideuslibexample.dialogs.DialogCommandModel"/>

        <variable
            name="customVM"
            type="biz.ideus.ideuslibexample.dialogs.CustomDialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/background_favorites_item"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dip"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dip"
            android:textStyle="bold"
            android:text="@{customVM.headerText}"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dip"
            android:text="@{customVM.messageText}"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/font_size_20" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" />

        <TextView
            android:tag="@{DialogCommandModel.UPDATE_NOW}"
            android:id="@+id/tv_update"
            android:onClick="@{customVM.onClick}"
            style="@style/DialogEditTextBtn"
            android:text="@string/update" />


    </LinearLayout>
</layout>
