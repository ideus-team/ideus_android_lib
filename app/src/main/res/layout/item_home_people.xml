<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <biz.ideus.ideuslib.widget.CircleImageView
            android:id="@+id/imageViewCircle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:src="@drawable/logo_temp_app"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageViewCircle">

            <TextView
                android:text="David Bowie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:padding="5dp"
                android:layout_toStartOf="@+id/tv_date" />

            <TextView
                android:text="6 Dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:textColor="@color/date_gray"
                android:layout_alignParentRight="true"
                android:padding="5dp" />

            <TextView
                android:layout_below="@+id/tv_name"
                android:text="For many of us, our wery first "
                android:padding="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_date"  />
        </RelativeLayout>

    </RelativeLayout>
</layout>