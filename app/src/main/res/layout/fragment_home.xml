<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:circular="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="biz.ideus.ideuslibexample.ui.main_screen.fragments.home_fragment.HomeFragmentVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            bind:viewModel="@{viewModel}">
        </include>

        <TextView
            android:id="@+id/text"
            android:text="@{viewModel.text}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <me.angrybyte.circularslider.CircularSlider
            android:id="@+id/circular"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="30dp"
            circular:angle="3.14"
            circular:border_color="#505090"
            circular:border_thickness="14dp"
            circular:thumb_color="#30AEFF"
            circular:thumb_size="24dp" />
        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:background="@color/black"-->
            <!--android:id="@+id/rViewPeople"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scrollbars="vertical" />-->

    </LinearLayout>
</layout>