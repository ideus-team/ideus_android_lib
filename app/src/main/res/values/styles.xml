<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_main</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--<item name="android:windowBackground">@drawable/drawable_run_app</item>-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextLabelSettings" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/gray</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/gray</item>
    </style>


    <style name="TextUserDetailsStyleName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_17</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextUserDetailsStyleContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditTextSettings">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">@dimen/font_size_10</item>
        <item name="android:layout_marginBottom">@dimen/font_size_10</item>
        <item name="android:paddingRight">@dimen/font_size_10</item>
        <item name="android:paddingLeft">@dimen/font_size_10</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:inputType">textCapSentences|textNoSuggestions</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ProfileRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_custom_stars_selector</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="StyledLinearProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/white</item>
        <item name="android:progressBackgroundTint">@color/white</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@android:color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="checkBoxComponent" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="ButtonGreenStyle" parent="android:Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/green_btn_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/font_size_15</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="DialogEditTextBtn" parent="android:Widget">
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:background">@drawable/edit_text_dialog_btn_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>


    <style name="SettingsTextTitleStyle" parent="android:Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/font_size_10</item>
        <item name="android:layout_marginTop">@dimen/font_size_20</item>
        <item name="android:layout_marginLeft">@dimen/font_size_10</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="SettingsTextPasswordStyle" parent="android:Widget.TextView">
        <item name="android:paddingBottom">@dimen/font_size_15</item>
        <item name="android:paddingTop">@dimen/font_size_15</item>
        <item name="android:layout_marginLeft">@dimen/font_size_10</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="RbTutorialStyle" parent="android:Widget">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/rb_tutorial_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ButtonTransparentStyle" parent="android:Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">@dimen/font_size_15</item>
        <item name="android:layout_marginRight">@dimen/font_size_15</item>
        <item name="android:layout_marginLeft">@dimen/font_size_15</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonTransparentStyleWhiteCorner" parent="android:Widget">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="SwitchBlueStyle" parent="android:Widget">
        <item name="android:thumb">@drawable/thumb_custom_switch</item>
        <item name="android:track">@drawable/selector_blue_switch</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:switchMinWidth">25dp</item>
        <item name="android:showText" tools:targetApi="lollipop">false</item>
    </style>

    <style name="SwitchGreenStyle" parent="android:Widget">
        <item name="android:thumb">@drawable/thumb_custom_switch</item>
        <item name="android:track">@drawable/selector_green_switch</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:switchMinWidth">25dp</item>
        <item name="android:showText" tools:targetApi="lollipop">false</item>
    </style>


    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="customDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
